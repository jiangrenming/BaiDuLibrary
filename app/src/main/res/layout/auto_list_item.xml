<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/history_item_height">
       <ImageView
           android:id="@+id/search_img"
           android:layout_width="@dimen/history_item_img_width"
           android:layout_centerVertical="true"
           android:layout_height="@dimen/history_item_img_width"
           android:src="@mipmap/search_img"
           android:layout_marginLeft="@dimen/history_item_img_left"
           android:scaleType="fitXY" />

        <TextView
            android:paddingLeft="@dimen/history_item_img_left"
            android:layout_toRightOf="@+id/search_img"
            android:id="@+id/auto_text"
            android:text="人民的名义"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height= "@dimen/history_item_img_width" />

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/search_copy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/history_item_img_width"
            android:paddingRight="@dimen/history_item_img_left"
            android:src="@mipmap/copy"
            android:layout_marginLeft="@dimen/history_item_img_left"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />
        <View
            android:id="@+id/view"
            android:layout_below="@+id/search_copy"
            android:layout_marginTop="@dimen/history_item_img_left"
            android:layout_width="match_parent"
            android:background="@color/colorGray"
            android:layout_height="@dimen/history_item_view"/>
    </RelativeLayout>

</RelativeLayout>