<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="@dimen/baidusearch"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/baidusearchHeight"
        android:layout_below="@+id/baidu_img"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/search_et_input"
                android:maxLines="3"
                android:maxLength="15"
                android:textCursorDrawable="@drawable/cursor"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/baidu_edit_padding"
                android:textColor="@color/colorBigBlack"
                android:background="@drawable/baidu_edittext_bg"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/edit_padding_left"
                android:layout_height="match_parent"
                android:textSize="@dimen/edit_text_size"
                android:imeOptions="actionSearch"
                android:inputType="text"/>
            <ImageView
                android:visibility="gone"
                android:layout_marginRight="@dimen/edit_img_right"
                android:background="@drawable/iv_delete_bg"
                android:id="@+id/search_iv_delete"
                android:layout_gravity="right|center_vertical"
                android:layout_width="@dimen/edit_img_right"
                android:scaleType="fitXY"
                android:layout_height="@dimen/edit_img_right"/>
        </FrameLayout>
        <Button
            android:id="@+id/baidu_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="百度一下"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/btn_text_size"
            android:background="@drawable/bd_btn_bg"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>